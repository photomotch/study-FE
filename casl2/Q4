MAIN	START
TOKUTEN	DC	80
	DC	40
	DC	65
	DC	70
	DC	90
HAJIME	LAD	GR7,TOKUTEN
	CALL	DPOINT
	RET
	END
;
DPOINT	START
	LAD	GR1,1
	LD	GR3,0,GR7
	ST	GR3,MAX
	ST	GR3,MIN
	ST	GR3,TOTAL
	LAD	GR2,4
LOOP	LAD	GR7,1,GR7
	LD	GR3,0,GR7
	CPA	GR3,MIN
	JPL	NOTMIN
	JZE	NOTMIN
	ST	GR3,MIN
	JUMP	NOTMAX
NOTMIN	CPA	GR3,MAX
	JMI	NOTMAX
	ST	GR3,MAX
NOTMAX	ADDA	GR3,TOTAL
	ST	GR3,TOTAL
	SUBA	GR2,GR1
	JNZ	LOOP
	SUBA	GR3,MAX
	SUBA	GR3,MIN
	;
	LAD	GR7,2
CONV	LAD	GR2,0
CONV1	CPA	GR3,TEN
	JMI	CONV2
	ADDA	GR2,GR1
	SUBA	GR3,TEN
	JUMP	CONV1
CONV2	ADDA	GR3,ZERO
	ST	GR3,OTBUF,GR7
	LD	GR3,GR2
	SUBA	GR7,GR1
	JMI	OUTPUT
	LD	GR3,GR3
	JNZ	CONV
	LD	GR3,SPACE
CONV3	ST	GR3,OTBUF,GR7
	SUBA	GR7,GR1
	JPL	CONV3
	JZE	CONV3
OUTPUT	OUT	OTBUF,OLENG
	RET
TEN	DC	10
ZERO	DC	'0'
SPACE	DC	''
OLENG	DC	3
OTBUF	DS	3
MIN	DS	1
MAX	DS	1
TOTAL	DS	1
	END